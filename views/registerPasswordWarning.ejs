<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-7">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input id="username" type="email" class="form-control" name="username">
            </div>
            
            <div class="form-group">
              <label for="password">Password</label>
              <input id="password" type="password" class="form-control" name="password">
            </div>

            <div class="form-group">
              <label for="password">Confirm Password</label>
              <input id="confirmPassword" type="password" class="form-control" name="confirmPassword" onkeyup="disabledButton()">
              <p class="text-danger">Those passwords didnâ€™t match. Try again.</p>
            </div>

            <button id="loginButton" type="submit" class="btn btn-dark" disabled>Register</button>
          </form>
          
          <script>
            function disabledButton() {
                if(document.querySelector("#username")!== "" && document.querySelector("#password")!== "" && document.querySelector("#confirmPassword")!== ""){
                  document.querySelector("#loginButton").disabled = false;
                }
              }
          </script>

        </div>
      </div>
    </div>

    <div class="verticalLine d-none d-sm-block">
      <hr>
    </div>

    <div class="col-sm-4">
      <div>
          <a class="btn btn-block thirdPartyLoginButton btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>

        <div>
          <a class="btn btn-block facebook thirdPartyLoginButton btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign Up with Facebook
          </a>
        </div>
      </div>
  </div>
</div>

<%- include('partials/header') %>
