<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered Our Secret!</h1>
    <hr>

    <div class="row">
      <div class="col-lg-4">
      <% for(let i = 0; i < title.length; i += 3){ %> 
        <p class="secretUserName"><%= title[i].username%> </p>  
        <% for(let j = 0; j < title[i].secret.length; j++){ %> 
          <p class="secret-text "><%= usersWithSecrets[i].secret[j]._id %> </p>  
        <% } %> 
      <% } %> 
      </div>

      <div class="col-lg-4">
        <% for(let i = 1; i < title.length; i += 3){ %> 
          <p class="secretUserName"><%= title[i].username%> </p>  
          <% for(let j = 0; j < title[i].secret.length; j++){ %> 
            <p class="secret-text "><%= usersWithSecrets[i].secret[j]._id %> </p>  
          <% } %> 
        <% } %> 
      </div>
      
      <div class="col-lg-4">
        <% for(let i = 2; i < title.length; i += 3){ %> 
          <p class="secretUserName"><%= title[i].username%> </p>  
          <% for(let j = 0; j < title[i].secret.length; j++){ %> 
            <p class="secret-text "><%= usersWithSecrets[i].secret[j]._id %> </p>  
          <% } %> 
        <% } %> 
      </div>
    </div>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
